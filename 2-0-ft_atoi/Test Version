int atoi (char *str)
{
	int n;
	int i;

	n = 0;
	i = 1;

	while (*str == ' ')
		str++;
	if (*str == '-')
		i = -1;
		str++;
	if (*str == '+')
		str++;
	while ((*str >= '0' && *str <= '9') && (*str))
	{
		n = 10 * n + (str[i] - '0');
		str++;
	}
	return(n * i);
